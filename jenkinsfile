pipeline {
    agent any

    stages {
        stage('checkout') {
            steps {
                checkout([$class: 'GitSCM', branches: [[name: '*/master']], extensions: [], userRemoteConfigs: [[url: 'https://github.com/mvali95/webgoat']]])
                sh 'ls -la'
            }
        }
        
        stage('codeql') {
          steps{
        withCodeQL(codeql:'codeql') {
            sh 'codeql --version'
            sh 'codeql database create webgoat --language=java --overwrite'
            sh 'codeql database analyze webgoat java-code-scanning.qls --sarif-category=java --format=sarif-latest --output=webgoat.sarif' //using the rules installed, analyse the goof app to see results and output in SARIF
            sh 'ls -la'
         }
         }
        }
       
    }
}
